{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],

    "module": "CommonJS",
    "moduleResolution": "Node",

    "outDir": "dist-server",
    "rootDir": "src",

    "noEmit": false,
    "declaration": false,
    "sourceMap": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/server/**/*.ts", "src/lib/**/*.ts", "src/utils/**/*.ts"],
  "exclude": ["node_modules", "src/app/**", ".next", "dist", "dist-server"]
}
